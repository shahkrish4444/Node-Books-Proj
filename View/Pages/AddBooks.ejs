<%- include('../Partials/Header.ejs') -%>
    <div class="d-flex justify-content-center v100 align-items-center my-5">
        <div class="w-40 p-4 rounded-4 bg-success">
            <form action="/addbook" method="post" class="w-100" id="bookForm">
                <h4 class="text-dark mb-3 text-center">Add Book</h4>
                <p id="error" class="mb-4 text-center text-danger"></p>
                <div class="mb-3">
                    <input type="text" name="title" class="form-control" placeholder="TITLE" id="title">
                </div>
                <div class="mb-3">
                    <select name="type" class="form-select" id="type">
                        <option value="">--SELECT TYPE--</option>
                        <option value="Rich Dad and Poor Dad">Rich Dad and Poor Dad</option>
                        <option value="Trading">Trading</option>
                        <option value="Cartoons">Cartoons</option>
                        <option value="Poems">Poems</option>
                        <option value="Mind Games">Mind Games</option>
                        <option value="Novel">NOVEL</option>
                    </select>
                </div>
                <div class="mb-3">
                    <div class="d-flex align-items-center form-control p-2">
                        <label class="me-4">STOCK : </label>
                        <div class="form-check me-4">
                            <input class="form-check-input" name="stock" type="radio" id="av" value="Avaliable">
                            <label class="form-check-label" for="av">
                                AVALIABLE
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="stock" id="noav" value="Not Avaliable">
                            <label class="form-check-label" for="noav">
                                NOT AVALIABLE
                            </label>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <input type="number" name="price" class="form-control" placeholder="PRICE" id="price">
                </div>
                <div class="mb-3">
                    <input type="date" name="published" class="form-control" id="published">
                </div>
                <div class="mb-3">
                    <input type="name" name="author" class="form-control" placeholder="AUTHOR NAME" id="author">
                </div>
                <button type="submit" class="btn btn-outline-light">Add</button>
            </form>
        </div>
    </div>
    <script>
        document.getElementById('bookForm').onsubmit = function (event) {
            var title = document.getElementById('title').value;
            var type = document.getElementById('type').value;
            var stockRadios = document.getElementsByName('stock');
            var price = document.getElementById('price').value;
            var published = document.getElementById('published').value;
            var author = document.getElementById('author').value;

            var stockSelected = false;
            for (var i = 0; i < stockRadios.length; i++) {
                if (stockRadios[i].checked) {
                    stockSelected = true;
                    break;
                }
            }

            if (!title || !type || !stockSelected || !price || !published || !author) {
                document.getElementById('error').textContent = alert('Please Fill All Details');
                event.preventDefault(); 
            } else {
                document.getElementById('error').textContent = ''; 
            }
        };
    </script>

    <%- include('../Partials/Footer.ejs') -%>